BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: text_input
            text: ''
            font_size: 40
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(int(text_input.text))

    Label:
        id: output_label
        text: ""
        font_size: 40
        color: (1,1,0,1)