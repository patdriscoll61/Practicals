BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: text_input
            text: ''
            font_size: 40
            multiline: False
            on_text_validate: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Label:
        id: output_label
        text: ""
        font_size: 40
        color: (1,1,0,1)