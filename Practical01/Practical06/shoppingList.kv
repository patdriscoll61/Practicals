"""
CP5632 Practical
Kivy GUI program to display a list of strings
"""

from kivy.app import App
from kivy.lang import Builder
from kivy.core.window import Window
from kivy.uix.label import Label


__author__ = 'Patrick Driscoll'


class ListLabels(App):


    def build(self):
        """ build the Kivy app from the kv file """
        Window.size = (600, 600)
        self.title = "Display a List of Strings"
        self.root = Builder.load_file('listLabels.kv')
        strings = ['String 1', 'String 2', 'String 3', 'String 4']
        for string in strings:
            temp_label = Label(text=string)
            self.root.ids.listBox.add_widget(temp_label)
            pass
        return self.root

ListLabels().run()
